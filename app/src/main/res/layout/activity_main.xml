<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acadgild.balu.acd_an_session_12_assignment_2_main.MainActivity"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/editText_number"
        android:hint="@string/hint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:id="@+id/button"
        android:textAllCaps="false"
        android:layout_below="@+id/editText_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:name="com.acadgild.balu.acd_an_session_12_assignment_2_main.SimpleAddition"
        android:id="@+id/fragment"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
